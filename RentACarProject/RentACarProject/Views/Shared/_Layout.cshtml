<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/css/style.css" rel="stylesheet" />
</head>
<body>
  <div id="wrapper">

      <header>

          <div class="logo">
              RENT A CAR
          </div>

          <nav>
              <ul>
                  <li>
                      <a href="/" style="color: #fff;">
                          <div class="link-style">
                            <span>Anasayfa</span>   
                          </div>
                      </a>
                  </li>
                  <li>
                      <a href="/FilterAndList" style="color: #fff;">
                          <div class="link-style">
                              <span> Araçlar</span>
                          </div>
                      </a>
                  </li>
                  <li>
                      <a href="/Subeler" style="color: #fff;">
                          <div class="link-style">
                              <span>Şubeler</span>
                          </div>
                      </a>
                  </li>
                  <li>
                      <a href="#" style="color: #fff;">
                          <div class="link-style">
                              <span>İletişim</span>
                          </div>
                      </a>
                     
                  </li>
                  <li>
                      <a href="/UyelikEkrani" style="color: #fff;">
