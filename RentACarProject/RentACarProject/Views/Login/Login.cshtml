@model RentACarProject.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/style.css" rel="stylesheet" />


<div class="login-giris" style="margin-left: 200px; margin-top: 60px;">

    <div class="ust">
        Login Ekranı
    </div>

    <div class="alt">

        @using (@Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            if (@ViewBag.Message != null)
            {
                <div style="border: 1px solid red;">
                    @ViewBag.Message
                </div>
            }
            @Html.LabelFor(a => a.Email)
            @Html.TextBoxFor(m => m.Email, new { @id = "txtuserEmail", @style = "width: 248px; height: 30px; border: 1px solid #ccc;" })
            @Html.ValidationMessageFor(a => a.Email)
            <br />
            @Html.LabelFor(a => a.Sifre)
            @Html.PasswordFor(m => m.Sifre, new { @id = "txtpasword", @style = "width: 248px; height: 30px; border: 1px solid #ccc;" })
            @Html.ValidationMessageFor(a => a.Sifre)
            <br />
            <input type="submit" value="Giriş" class="btnStyle">
        }

    </div>
</div>

